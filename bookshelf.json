{
  "openapi": "3.0.0",
  "info": {
    "title": "Dokumentasi TSGDAILY",
    "version": "1.0.0",
    "description": "Dokumentasi api tsgdaily"
  },
  "servers": [
    {
      "url": "https://auth-tsgdaily.tsgitdev.com"
    }
  ],
  "paths": {
    "/auth": {
      "post": {
        "tags": [
          "AuthModules"
        ],
        "summary": "/auth",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "anyOf": [
                  {
                    "$ref": "#/components/schemas/GetIdByEmail"
                  },
                  {
                    "$ref": "#/components/schemas/UpdatePassowrd"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UpdatePassowrd": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "example": "mutation { updatePassword(id: 5, password: \"passwordbaru\") { authID password } }"
          }
        },
        "example": {
            "data": {
              "updatePassword": {
                "authID": 5,
                "password": "passwordbarunich"
              }
            }
        }
      },
      "GetIdByEmail": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "getUidByEmail": {
                "type": "object",
                "properties": {
                  "authID": {
                    "type": "integer",
                    "example": 5
                  }
                }
              }
            }
          }
        },
        "example": {
          "data": {
            "getUidByEmail": {
              "authID": 5
            }
          }
        }
      }
    }
  }
}
