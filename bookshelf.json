{
  "openapi": "3.0.0",
  "info": {
    "title": "Dokumentasi TSGDAILY",
    "version": "1.0.0",
    "description": "Dokumentasi api tsgdaily"
  },
  "paths": {
    "/auth": {
      "post": {
        "tags": [
          "AuthModules"
        ],
        "servers": [
          {
            "url": "https://auth-tsgdaily.tsgitdev.com",
            "description": "Auth Module untuk autentikasi user"
          }
        ],
        "summary": "/auth",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "anyOf": [
                  {
                    "$ref": "#/components/schemas/GetIdByEmailReq"
                  },
                  {
                    "$ref": "#/components/schemas/UpdatePasswordReq"
                  }
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json":{
                "schema":{
                  "anyOf": [
                    {
                      "$ref": "#/components/schemas/GetIdByEmailRes"
                    },
                    {
                      "$ref": "#/components/schemas/UpdatePasswordRes"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/user": {
      "post": {
        "tags": [
          "UserModules"
        ],
        "servers": [
          {
            "url": "https://user-tsgdaily.tsgitdev.com",
            "description": "User Module untuk personal data user"
          }
        ],
        "summary": "/user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json":{
                
              }
            }
          }
        }
      }
    },
    "/interaction": {
      "post": {
        "tags": [
          "InteractionModules"
        ],
        "servers": [
          {
            "url": "https://interaction-tsgdaily.tsgitdev.com",
            "description": "interaction Module untuk user saling berinteraksi"
          }
        ],
        "summary": "/interaction",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json":{
                
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "UpdatePasswordReq": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "example": "mutation { updatePassword(id: 5, password: \"passwordbaru\") { authID password } }"
          }
        }
      },
      "UpdatePasswordRes": {
        "type": "object",
        "properties": {
            "data": {
              "type": "object",
              "properties": {
                "updatePassword": {
                  "type": "object",
                  "properties": {
                    "authID": {
                      "type": "number",
                      "example": 5
                    },
                  "password": {
                    "type":"string",
                    "example": "passwordbarunich"
                  }
                  }
                }
              }
            }
          
        }
      },
      "GetIdByEmailReq": {
        "type": "object",
        "properties": {
          "query": {
            "type": "string",
            "example": "query{ getUidByEmail(email:\"adrianji1945@gmail.com\"){ authID }}"
          }
        }
      },
      "GetIdByEmailRes": {
        "type": "object",
        "properties": {
          "data": {
            "type": "object",
            "properties": {
              "getUidByEmail": {
                "type": "object",
                "properties": {
                  "authID": {
                    "type": "number",
                    "example": 5
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
